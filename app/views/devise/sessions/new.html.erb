<div id="sign-up">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h2>Sign In</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.email_field :email, class: "form-control", id: "useremail", placeholder: "Enter Email", required: false, autofocus: true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", id:
                "userpassword", placeholder: "Enter Password", required: false %>
              </div>
            </div>
          </div>

          <div class="form-actions">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Sign In", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
